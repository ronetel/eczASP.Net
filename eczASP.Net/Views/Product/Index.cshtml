@model eczASP.Net.Models.ProductViewModel

@{
    ViewData["Title"] = "Catalog";
}

<h2>Catalog</h2>

<form asp-action="Catalog" method="get">
    <div class="form-group">
        <label for="search">Search:</label>
        <input type="text" id="search" name="search" value="@Model.Search" class="form-control" />
    </div>
    <div class="form-group">
        <label for="sort">Sort:</label>
        <select id="sort" name="sort" class="form-control">
            <option value="">Default</option>
            <option value="price_asc" @(Model.Sort == "price_asc" ? "selected" : "")>Price Ascending</option>
            <option value="price_desc" @(Model.Sort == "price_desc" ? "selected" : "")>Price Descending</option>
            <option value="name_asc" @(Model.Sort == "name_asc" ? "selected" : "")>Name Ascending</option>
            <option value="name_desc" @(Model.Sort == "name_desc" ? "selected" : "")>Name Descending</option>
        </select>
    </div>
    <div class="form-group">
        <label for="filter">Filter by Category:</label>
        <select id="filter" name="filter" class="form-control">
            <option value="">All</option>
            <option value="Rock" @(Model.Filter == "Rock" ? "selected" : "")>Rock</option>
            <option value="Pop" @(Model.Filter == "Pop" ? "selected" : "")>Pop</option>
            <option value="Jazz" @(Model.Filter == "Jazz" ? "selected" : "")>Jazz</option>
            <option value="Classical" @(Model.Filter == "Classical" ? "selected" : "")>Classical</option>
            <option value="Electronic" @(Model.Filter == "Electronic" ? "selected" : "")>Electronic</option>
            <option value="Hip-Hop" @(Model.Filter == "Hip-Hop" ? "selected" : "")>Hip-Hop</option>
            <option value="Country" @(Model.Filter == "Country" ? "selected" : "")>Country</option>
            <option value="Blues" @(Model.Filter == "Blues" ? "selected" : "")>Blues</option>
            <option value="Folk" @(Model.Filter == "Folk" ? "selected" : "")>Folk</option>
        </select>
    </div>
    <div class="form-group">
        <label for="minPrice">Min Price:</label>
        <input type="number" id="minPrice" name="minPrice" value="@Model.MinPrice" class="form-control" />
    </div>
    <div class="form-group">
        <label for="maxPrice">Max Price:</label>
        <input type="number" id="maxPrice" name="maxPrice" value="@Model.MaxPrice" class="form-control" />
    </div>
    <div class="form-group">
        <label for="inStock">In Stock:</label>
        <input type="checkbox" id="inStock" name="inStock" @(Model.InStock.HasValue && Model.InStock.Value ? "checked" : "") class="form-check-input" />
    </div>
    <button type="submit" class="btn btn-primary">Filter</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Price</th>
            <th>Description</th>
            <th>Stock Quantity</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.Products)
        {
            <tr>
                <td>@product.ProductName</td>
                <td>@product.Price</td>
                <td>@product.DescriptionProduct</td>
                <td>@product.StockQuantity</td>
            </tr>
        }
    </tbody>
</table>
